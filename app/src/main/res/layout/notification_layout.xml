<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spin Admin"
        android:layout_centerVertical="true"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:textColor="@android:color/white"
        />

    <RelativeLayout
        android:id="@+id/notification_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/notification_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="bell"
            android:gravity="center"
            android:src="@drawable/ic_notifications_white" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/badge"
            android:layout_width="wrap_content"
            android:minWidth="17sp"
            android:textSize="12sp"
            android:textColor="#ffffffff"
            android:layout_height="wrap_content"
            android:text="@null"
            android:layout_alignTop="@id/notification_iv"
            android:layout_alignRight="@id/notification_iv"
            android:layout_marginRight="0dp"
            android:layout_marginTop="3dp"
            android:paddingBottom="1dp"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:gravity="center_horizontal"
            android:background="@drawable/rounded_squre"/>

    </RelativeLayout>

</RelativeLayout>